#!/usr/bin/php
<?

require_once dirname(__FILE__).'/../../../config/environment.php';

if (isset($_SERVER['argv'][1])) {
	$classes = array( "{$_SERVER['argv'][1]}_test" );
} else {
	$dir = dir(CREOVEL_PATH.'test');
	while (false !== ($file = $dir->read())) if (preg_match('/.php$/', $file)) $classes[] = str_replace('.php', '', $file);
	sort($classes);
}

foreach ($classes as $class)
{
	require_once CREOVEL_PATH."test/{$class}.php";

	$class = new $class();
	$class->run();
}

?>
